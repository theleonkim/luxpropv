@using Microsoft.JSInterop
@inject IJSRuntime JS

<div id="@_viewerId" style="width:100%; height:500px;"></div>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = string.Empty;

    private string _viewerId = $"tour360_{Guid.NewGuid().ToString("N")}";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !string.IsNullOrWhiteSpace(ImageUrl))
        {
            await JS.InvokeVoidAsync("tour360.initViewer", _viewerId, ImageUrl);
        }
    }
}
