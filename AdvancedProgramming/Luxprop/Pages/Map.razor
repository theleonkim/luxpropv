@page "/map"

<PageTitle>Mapa Interactivo - Luxprop</PageTitle>

<div class="map-page">
    <div class="page-header">
        <h1>Interactive Map</h1>
        <p class="subtitle">
           Explore your future property at real time.
        </p>
    </div>

    <div class="map-container">
        <iframe src="https://mapa-one-interactivo.vercel.app/"
                title="Mapa Interactivo"
                width="100"
                height="100"
                style="border:none;"
                allowfullscreen>
        </iframe>
    </div>
</div>

<style>
    .map-page {
        padding: 2rem;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .page-header h1 {
            color: #0d505a;
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    .subtitle {
        font-size: 1.1rem;
        color: #555;
        max-width: 700px;
        margin: 0 auto;
    }

    .map-container {
        width: 100%;
        height: 85vh;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(0,0,0,.15);
        background-color: white;
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
