@page "/expedientes/details/{ExpedienteId:int}"
@using ClosedXML.Excel
@using Luxprop.Data.Models
@using Microsoft.EntityFrameworkCore
@using QuestPDF.Fluent
@using QuestPDF.Helpers
@inject LuxpropContext Db
@inject NavigationManager Navigation
@inject IJSRuntime JS

@using Luxprop.Business.Services
@using Luxprop.Services
@inject IExpedienteService ExpedienteService
@inject NavigationManager Navigation
@inject SessionService SessionService
@inject DocumentoService DocumentoService

<PageTitle>Case File Details</PageTitle>

@if (expediente == null)
{
    <div class="loading">Loading case fileâ€¦</div>
}
else
{
    <div class="details-container">
        <div class="header-bar">
            <div>
                <h2 class="title">Case File <span class="code">@expediente.Codigo</span></h2>
                <p class="subtitle">Full record of property and document management</p>
            </div>
            <div class="btn-group">
                <button class="btn-outline" @onclick='() => Navigation.NavigateTo("/expedientes")'>
                    <i class="bi bi-arrow-left-circle"></i> Back
                </button>
                <button class="btn-primary"
                        @onclick='() => Navigation.NavigateTo($"/expedientes/edit/{expediente.ExpedienteId}")'>
                    <i class="bi bi-pencil-square"></i> Edit
                </button>
            </div>
        </div>

        <div class="tabs">
            <button class="@GetTabClass("info")" @onclick="@(() => Activate("info"))">Information</button>
            <button class="@GetTabClass("docs")" @onclick="@(() => Activate("docs"))">Documents</button>
            <button class="@GetTabClass("history")" @onclick="@(() => Activate("history"))">History</button>
            <button class="@GetTabClass("tasks")" @onclick="@(() => Activate("tasks"))">Tasks</button>
        </div>

        <!-- ðŸ”¹ InformaciÃ³n -->
        @if (activeTab == "info")
        {
            <div class="card">
                <div class="info-grid">
                    <div><b>Code:</b> @expediente.Codigo</div>
                    <div><b>Property:</b> @expediente.Propiedad?.Titulo</div>
                    <div><b>Client:</b> @expediente.Cliente?.Usuario?.Nombre @expediente.Cliente?.Usuario?.Apellido</div>
                    <div><b>Agent:</b> @expediente.Agente?.Nombre @expediente.Agente?.Apellido</div>
                    <div><b>Status:</b> <span class="badge">@expediente.Estado</span></div>
                    <div><b>Priority:</b> @expediente.Prioridad</div>
                    <div><b>Category:</b> @expediente.Categoria</div>
                    <div class="full"><b>Description:</b> @expediente.Descripcion</div>
                    <div><b>Opened:</b> @expediente.FechaApertura?.ToString("yyyy-MM-dd")</div>
                    <div><b>Closed:</b> @(expediente.FechaCierre?.ToString("yyyy-MM-dd") ?? "In progress")</div>
                </div>
            </div>
        }

        <!-- ðŸ”¹ Documentos -->
        @if (activeTab == "docs")
        {
            <div class="card">

                @if (expediente.Documentos?.Any() == true)
                {
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Uploaded</th>
                                <th>Status</th>
                                <th>Due Date</th>
                                <th style="width:220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in expediente.Documentos.OrderByDescending(x => x.FechaCarga))
                            {
                                <tr>
                                    <td>@d.Nombre</td>

                                    <td>@(d.FechaCarga?.ToString("yyyy-MM-dd") ?? "â€”")</td>

                                    <td>
                                        <span class="badge">@d.Estado</span>
                                    </td>

                                    <!-- ðŸ”¹ FECHA DE VENCIMIENTO EDITABLE -->
                                    <td>
                                        <InputDate @bind-Value="d.FechaVencimiento"
                                                   class="form-control form-control-sm"
                                                   @onchange="async (_) => await SaveDueDate(d)" />
                                    </td>

                                    <!-- ðŸ”¹ BOTONES -->
                                    <td>
                                        <div class="btn-group">

                                            <!-- Download -->
                                            @if (!string.IsNullOrWhiteSpace(d.UrlArchivo))
                                            {
                                                <a class="btn btn-sm btn-outline-info"
                                                   href="@d.UrlArchivo" target="_blank">
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            }

                                            <!-- Delete -->
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => ConfirmDeleteDocument(d)">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No documents uploaded yet.</div>
                }
            </div>
        }


        <!-- ðŸ”¹ Historial -->
        @if (activeTab == "history")
        {
            <div class="card">
                @if (expediente.HistorialExpedientes?.Any() == true)
                {
                    <div class="row-between mb16">
                        <h3 class="section-title">History</h3>

                        <div>
                            <button class="btn btn-secondary" @onclick="ExportHistoryExcel">Export Excel</button>
                            <button class="btn btn-primary" @onclick="ExportHistoryPdf">Export PDF</button>
                        </div>
                    </div>


                    <table class="grid">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>New Status</th>
                                <th>User</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var h in expediente.HistorialExpedientes.OrderByDescending(h => h.FechaModificacion))
                            {
                                <tr>
                                    <td>@h.FechaModificacion?.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td><span class="badge badge-muted">@h.EstadoNuevo</span></td>
                                    <td><span class="badge badge-muted">@($"{h.Usuario!.Nombre} {h.Usuario.Apellido}")</span></td>
                                    <td>@h.Descripcion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No history records yet.</div>
                }
            </div>
        }

        <!-- ðŸ”¹ Tareas -->
        @if (activeTab == "tasks")
        {
            <div class="card">
                <div class="header-between">
                    <h4>Tasks</h4>
                    <button class="btn-primary btn-sm" @onclick="() => ShowTaskModal(true)">+ Add Task</button>
                </div>

                @if (expediente.TareaTramites?.Any() == true)
                {
                    <table class="styled-table">
                        <thead>
                            <tr><th>Title</th><th>Status</th><th>Priority</th><th>Start</th><th>Due</th><th>Closed</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var t in expediente.TareaTramites.OrderByDescending(x => x.FechaInicio))
                            {
                                <tr>
                                    <td>@t.Titulo</td>
                                    <td>@BadgeForStatus(t.Estado)</td>
                                    <td>@BadgeForPriority(t.Prioridad)</td>
                                    <td>@(t.FechaInicio?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(t.FechaCompromiso?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(t.FechaCierre?.ToString("yyyy-MM-dd") ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No tasks yet.</div>
                }
            </div>
            @if (showTaskModal)
            {
                <div class="modal-backdrop-task">
                    <div class="modal-task card p-4">
                        <h5 class="fw-bold mb-3">Add Task</h5>

                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input class="form-control" @bind="newTask.Titulo" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Priority</label>
                            <select class="form-select" @bind="newTask.Prioridad">
                                <option value="Low">Low</option>
                                <option value="Normal">Normal</option>
                                <option value="High">High</option>
                                <option value="Urgent">Urgent</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Due date</label>
                            <input type="date" class="form-control" @bind="newTask.FechaCompromiso" />
                        </div>

                        <div class="mt-3 d-flex justify-content-end gap-2">
                            <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                            <button class="btn btn-primary" @onclick="SaveTaskAsync">Save Task</button>
                        </div>
                    </div>
                </div>
            }

        }
    </div>
}

@code {
    [Parameter] public int ExpedienteId { get; set; }
    private Expediente? expediente;
    private string activeTab = "info";
    private bool showTaskModal;
    private TareaTramite newTask = new();
    
    private List<HistorialExpediente>? historial;
    private List<TareaTramite>? tasks;

    protected override async Task OnInitializedAsync()
    {
        // Load Case File + related data
        expediente = await Db.Expedientes
            .Include(e => e.Propiedad)
            .Include(e => e.Cliente).ThenInclude(c => c.Usuario)
            .Include(e => e.Agente)
            .Include(e => e.Documentos)
            .FirstOrDefaultAsync(e => e.ExpedienteId == ExpedienteId);

        historial = await Db.HistorialExpedientes
            .Include(h => h.Usuario) 
            .Where(h => h.ExpedienteId == ExpedienteId)
            .OrderByDescending(h => h.FechaModificacion)
            .ToListAsync();


        tasks = await Db.TareaTramites
            .Where(t => t.ExpedienteId == ExpedienteId)
            .OrderByDescending(t => t.FechaInicio)
            .ToListAsync();
    }

    private void Activate(string tab) => activeTab = tab;
    private string GetTabClass(string tab) => tab == activeTab ? "tab active" : "tab";
    private string GetDownloadHref(string? f) => string.IsNullOrWhiteSpace(f) ? "#" : $"/uploads/{Uri.EscapeDataString(f)}";

    private void ShowTaskModal(bool show)
    {
        newTask = new TareaTramite
        {
            ExpedienteId = ExpedienteId,
            Estado = "Open",
            Prioridad = "Normal",
            FechaInicio = DateTime.Now
        };
        showTaskModal = show;
    }

    private void CloseModal() => showTaskModal = false;


    private async Task SaveTaskAsync()
    {
        if (string.IsNullOrWhiteSpace(newTask.Titulo)) return;

        expediente?.TareaTramites?.Add(newTask);
        await ExpedienteService.UpdateAsync(expediente!, await SessionService.GetUserIdAsync(), "Tarea agregada");

        showTaskModal = false;
        activeTab = "tasks";
        StateHasChanged();
    }
    private async Task SaveDueDate(Documento d)
    {
        try
        {
            Db.Documentos.Update(d);
            await Db.SaveChangesAsync();

            Console.WriteLine($"Due date updated for document {d.DocumentoId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error updating due date: " + ex.Message);
        }
    }

    private async Task ConfirmDeleteDocument(Documento d)
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete '{d.Nombre}'?");

        if (!confirm)
            return;

        try
        {
            int usuarioId = await SessionService.GetUserIdAsync();

            if (!string.IsNullOrEmpty(d.UrlArchivo))
            {
                // borrar archivo fÃ­sico
                await DocumentoService.DeleteFileAsync(d.UrlArchivo, d.ExpedienteId, usuarioId);
            }

            // borrar registro DB
            Db.Documentos.Remove(d);
            await Db.SaveChangesAsync();

            // refrescar la data
            expediente.Documentos.Remove(d);

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error deleting document: " + ex.Message);
        }
    }

    public async Task ExportHistoryExcel()
    {
        using var wb = new XLWorkbook();
        var ws = wb.Worksheets.Add("History");

        // Header
        ws.Cell(1, 1).Value = "Date";
        ws.Cell(1, 2).Value = "Status";
        ws.Cell(1, 3).Value = "User";
        ws.Cell(1, 4).Value = "Description";

        int row = 2;
        foreach (var h in historial)
        {
            ws.Cell(row, 1).Value = h.FechaModificacion;
            ws.Cell(row, 2).Value = h.EstadoNuevo;
            ws.Cell(row, 3).Value = $"{h.Usuario?.Nombre} {h.Usuario?.Apellido}";
            ws.Cell(row, 4).Value = h.Descripcion;
            row++;
        }

        using var stream = new MemoryStream();
        wb.SaveAs(stream);
        var bytes = stream.ToArray();
        var base64 = Convert.ToBase64String(bytes);

        await JS.InvokeVoidAsync("downloadFile",
            $"History_{DateTime.Now:yyyyMMdd}.xlsx",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            base64);
    }

    private async Task ExportHistoryPdf()
    {
        // AsegÃºrate de que 'historial' no sea null
        var items = historial ?? new List<HistorialExpediente>();

        var pdfBytes = Document.Create(container =>
        {
            container.Page(page =>
            {
                page.Size(PageSizes.A4);
                page.Margin(20);
                page.DefaultTextStyle(x => x.FontSize(11));

                page.Header().AlignCenter().Text($"Case File History #{ExpedienteId}").FontSize(16).SemiBold();

                page.Content().PaddingVertical(10).Table(table =>
                {
                    // Columnas: Date | Status | User | Description
                    table.ColumnsDefinition(columns =>
                    {
                        columns.ConstantColumn(120); // Date
                        columns.ConstantColumn(100); // Status
                        columns.ConstantColumn(160); // User
                        columns.RelativeColumn();    // Description
                    });

                    // Header row (uso de lambdas inline para evitar problemas con referencias)
                    table.Header(header =>
                    {
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Date").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Status").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("User").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Description").Bold());
                    });

                    // Filas
                    foreach (var h in items)
                    {
                        table.Cell().Element(cell => cell.Padding(6).Text(h.FechaModificacion?.ToString("yyyy-MM-dd HH:mm") ?? ""));
                        table.Cell().Element(cell => cell.Padding(6).Text(h.EstadoNuevo ?? "-"));
                        table.Cell().Element(cell =>
                            cell.Padding(6).Text($"{h.Usuario?.Nombre ?? ""} {h.Usuario?.Apellido ?? ""}".Trim()));
                        table.Cell().Element(cell => cell.Padding(6).Text(h.Descripcion ?? ""));
                    }
                });
            });
        }).GeneratePdf();

        // Enviar al navegador como base64 (mÃ¡s fiable con Blazor)
        var base64 = Convert.ToBase64String(pdfBytes);
        await JS.InvokeVoidAsync("downloadFile", $"History_{DateTime.Now:yyyyMMdd}.pdf", "application/pdf", base64);
    }

    // UI helpers for badges (render as MarkupString to keep spans)
    
    private MarkupString BadgeForStatus(string? s)
    {
        var cls = s switch
        {
            "Completed" => "badge-success",
            "In Progress" => "badge-warning",
            "On Hold" => "badge-muted",
            _ => "badge"
        };
        return new($"<span class=\"badge {cls}\">{s}</span>");
    }

    private MarkupString BadgeForPriority(string? p)
    {
        var cls = p switch
        {
            "Urgent" => "badge-danger",
            "High" => "badge-warning",
            "Low" => "badge-muted",
            _ => "badge"
        };
        return new($"<span class=\"badge {cls}\">{p}</span>");
    }
}

