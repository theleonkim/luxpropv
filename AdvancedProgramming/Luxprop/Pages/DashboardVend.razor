@page "/dashboardvend"
@using Luxprop.Data
@using Luxprop.Data.Models
@inject LuxpropContext Db
@inject Luxprop.Services.SessionService Session
@inject NavigationManager Nav

<PageTitle>Seller Dashboard</PageTitle>

@if (!loaded)
{
    <div class="container py-5 text-center text-muted">
        <div class="spinner-border mb-3" role="status"></div>
        <p>Loading your dashboard…</p>
    </div>
}
else if (!authorized)
{
    <div class="container py-5 text-center text-danger">
        <h2 class="h4">Unauthorized</h2>
        <p>You don't have access to this area.</p>
    </div>
}
else
{
    <div class="dashboard-page container py-4">

        <!-- HEADER -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-2">
            <div>
                <h1 class="h3 mb-1">Seller dashboard</h1>
                <p class="text-muted mb-0">
                    Track the status of your listings and take action quickly.
                </p>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a href="/properties/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Add property
                </a>
                <a href="/properties" class="btn btn-outline-secondary">
                    <i class="bi bi-list-ul me-1"></i> View all
                </a>
            </div>
        </div>

        <div class="row g-4">
            <!-- Summary -->
            <div class="col-lg-4">
                <div class="dashboard-card h-100">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Portfolio summary</h3>
                    </div>
                    <div class="card-content">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="text-muted small">Total properties</div>
                                <div class="stat-number h3 mb-0">@totalProperties</div>
                            </div>
                            <div class="rounded-circle bg-primary bg-opacity-10 p-2">
                                <i class="bi bi-house-door fs-4 text-primary"></i>
                            </div>
                        </div>

                        <div class="mb-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="text-muted small">Active listings</div>
                                    <div class="stat-number h4 mb-0">@activeProperties</div>
                                </div>
                                @{
                                    var activePct = totalProperties > 0
                                    ? (int)(activeProperties * 100.0 / totalProperties)
                                    : 0;
                                }
                                <span class="badge bg-success bg-opacity-10 text-success">
                                    @activePct% active
                                </span>
                            </div>
                        </div>

                        <div class="mt-2">
                            <div class="d-flex justify-content-between small text-muted mb-1">
                                <span>Portfolio health</span>
                                <span>@(totalProperties == 0 ? "N/A" : $"{activeProperties}/{totalProperties} active")</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-success"
                                     style="width:@(totalProperties > 0 ? activeProperties * 100.0 / totalProperties : 0)%">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick actions -->
            <div class="col-lg-4">
                <div class="dashboard-card h-100">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Quick actions</h3>
                    </div>
                    <div class="card-content d-grid gap-2">
                        <a href="/properties/create" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle me-1"></i> Add new property
                        </a>
                        <a href="/properties" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-list-ul me-1"></i> View all listings
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent properties -->
            <div class="col-lg-4">
                <div class="dashboard-card h-100">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Recent properties</h3>
                    </div>
                    <div class="card-content">
                        @if (recentProperties?.Any() == true)
                        {
                            <ul class="activity-list list-unstyled mb-0">
                                @foreach (var p in recentProperties.Take(5))
                                {
                                    <li class="activity-item py-2 border-bottom small">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="activity-title fw-semibold">@p.Titulo</div>
                                                <div class="activity-meta text-muted">
                                                    ID: @p.PropiedadId
                                                </div>
                                            </div>
                                            <span class="badge @GetPropertyStatusBadge(p.EstadoPublicacion)">
                                                @p.EstadoPublicacion
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="no-activity text-muted">
                                No recent activity yet.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@code {
    private bool loaded, authorized, firstPass;
    private int totalProperties, activeProperties;
    private List<Propiedad> recentProperties = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || firstPass) return;
        firstPass = true;

        await Session.LoadUserAsync();
        var role = NormalizeRole(await Session.GetUserRoleAsync());

        if (string.IsNullOrWhiteSpace(role))
        {
            await Task.Delay(50);
            role = NormalizeRole(await Session.GetUserRoleAsync());
            if (string.IsNullOrWhiteSpace(role)) return;
        }

        authorized = role == "seller";
        if (!authorized)
        {
            var target = role switch
            {
                "admin" => "/dashboard",
                "agent" => "/dashboardagent",
                "buyer" => "/dashboardcomp",
                _ => "/login"
            };
            Nav.NavigateTo(target, true);
            return;
        }

        // Later you can filter by current seller when that linkage exists.
        var all = Db.Propiedads
            .OrderByDescending(p => p.PropiedadId)
            .ToList();

        totalProperties = all.Count;
        activeProperties = all.Count(p => p.EstadoPublicacion == "Active");
        recentProperties = all;

        loaded = true;
        StateHasChanged();
    }

    private static string NormalizeRole(string? name)
    {
        var n = name?.Trim().ToLowerInvariant();
        return n switch
        {
            "administrador" or "admin" => "admin",
            "agente" or "agent" => "agent",
            "vendedor" or "seller" => "seller",
            "comprador" or "buyer" or "cliente" => "buyer",
            _ => string.Empty
        };
    }

    private static string GetPropertyStatusBadge(string? status) =>
        status?.ToLowerInvariant() switch
        {
            "active" or "activo" => "bg-success text-white",
            "pending" or "pendiente" => "bg-warning text-dark",
            _ => "bg-secondary text-white"
        };
}
