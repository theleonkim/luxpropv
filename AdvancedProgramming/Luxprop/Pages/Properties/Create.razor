@page "/properties/create"
@using Luxprop.Data
@using Luxprop.Data.Models
@using Luxprop.Services
@using Microsoft.EntityFrameworkCore
@inject LuxpropContext Db
@inject NavigationManager Navigation
@inject SessionService SessionService


<PageTitle>Create Property - Luxprop</PageTitle>

<div class="create-property-page">
    <div class="page-header">
        <h1>Create New Property</h1>
        <a href="/properties" class="btn btn-secondary">Back to Properties</a>
    </div>

    <div class="form-container">
        <EditForm Model="@property" OnValidSubmit="@HandleSubmit" FormName="CreatePropertyForm">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label for="titulo">Title</label>
                <InputText id="titulo" @bind-Value="property.Titulo" class="form-control" />
                <ValidationMessage For="@(() => property.Titulo)" />
            </div>

            <div class="form-group">
                <label for="descripcion">Description</label>
                <InputTextArea id="descripcion" @bind-Value="property.Descripcion" class="form-control" rows="4" />
                <ValidationMessage For="@(() => property.Descripcion)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Property Type</label>
                <select class="form-select" @bind="property.Tipo_Propiedad">
                    <option value="">Select type...</option>
                    <option>Beachfront</option>
                    <option>Hotels</option>
                    <option>Homes</option>
                    <option>Condos</option>
                    <option>Golf</option>
                    <option>Mountain</option>
                    <option>City Homes</option>
                    <option>Beach Homes</option>
                    <option>Apartments</option>
                    <option>Penthouses</option>
                    <option>Farms</option>
                    <option>Business</option>
                </select>
            </div>


            <div class="form-group">
                <label for="precio">Price</label>
                <InputNumber id="precio" @bind-Value="property.Precio" class="form-control" />
                <ValidationMessage For="@(() => property.Precio)" />
            </div>

            <div class="form-group">
                <label for="areaConstruccion">Construction Area (m²)</label>
                <InputNumber id="areaConstruccion" @bind-Value="property.AreaConstruccion" class="form-control" />
                <ValidationMessage For="@(() => property.AreaConstruccion)" />
            </div>

            <div class="form-group">
                <label for="areaTerreno">Land Area (m²)</label>
                <InputNumber id="areaTerreno" @bind-Value="property.AreaTerreno" class="form-control" />
                <ValidationMessage For="@(() => property.AreaTerreno)" />
            </div>

            <div class="form-group">
                <label for="estadoPublicacion">Publication Status</label>
                <InputSelect id="estadoPublicacion" @bind-Value="property.EstadoPublicacion" class="form-control">
                    <option value="">Select Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Pending">Pending</option>
                </InputSelect>
                <ValidationMessage For="@(() => property.EstadoPublicacion)" />
            </div>

            @if (role == "admin")
            {
                <div class="mb-3">
                    <label class="form-label">Agente asignado</label>
                    <select @bind="property.AgenteId" class="form-select">
                        <option value="">-- Seleccione un agente --</option>
                        @foreach (var a in agentes)
                        {
                            <option value="@a.UsuarioId">@a.Nombre @a.Apellido</option>
                        }
                    </select>
                    <ValidationMessage For="@(() => property.AgenteId)" />
                </div>
            }
            else if (role == "agent")
            {
                <p class="text-muted">
                    Esta propiedad será asignada automáticamente al agente:
                    <strong>@SessionService.CurrentUserName</strong>
                </p>
            }


            <div class="form-group">
                <label for="ubicacionId">Location</label>
                <InputSelect id="ubicacionId" @bind-Value="property.UbicacionId" class="form-control">
                    <option value="">Select Location</option>
                    @foreach (var location in locations)
                    {
                        <option value="@location.UbicacionId">@location.Provincia</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => property.UbicacionId)" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Creating...</span>
                    }
                    else
                    {
                        <span>Create Property</span>
                    }
                </button>
                <a href="/properties" class="btn btn-secondary">Cancel</a>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">@errorMessage</div>
            }
        </EditForm>
    </div>
</div>

@code {
    private string role = "";

    private Propiedad property = new();
    private List<Usuario> agents = new();
    private List<Ubicacion> locations = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private List<Usuario> agentes = new();
    private Propiedad model = new();



    protected override async Task OnInitializedAsync()
    {
        // Asignar a la variable global
        role = NormalizeRole(await SessionService.GetUserRoleAsync());

        // ADMIN → cargar agentes
        if (role == "admin")
        {
            agentes = await Db.Usuarios
                .Where(u => u.UsuarioRols
                    .Any(ur => ur.Rol.Nombre.ToLower() == "agente"
                            || ur.Rol.Nombre.ToLower() == "agent"))
                .ToListAsync();
        }

        // AGENTE → asignarse automáticamente
        if (role == "agent")
        {
            property.AgenteId = await SessionService.GetUserIdAsync();
        }

        await LoadData();
    }




    private static string NormalizeRole(string? name)
    {
        var n = name?.Trim().ToLowerInvariant();
        return n switch
        {
            "administrador" or "admin" => "admin",
            "agente" or "agent" => "agent",
            _ => string.Empty
        };
    }


    private async Task LoadData()
    {
        try
        {
            agents = Db.Usuarios.ToList();
            locations = Db.Ubicacions.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading data.";
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            property.MlsId = GenerateMlsId();
            Db.Propiedads.Add(property);
            await Db.SaveChangesAsync();
            Navigation.NavigateTo("/properties");
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while creating the property.";
            Console.WriteLine($"Error creating property: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    private string GenerateMlsId()
    {
        return DateTime.Now.ToString("yyyyMMddHHmmss");
    }
}

