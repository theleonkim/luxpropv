@page "/properties/edit/{id:int}"
@using Luxprop.Data
@using Luxprop.Data.Models
@inject LuxpropContext Db
@inject NavigationManager Navigation

<PageTitle>Edit Property - Luxprop</PageTitle>

<div class="create-property-page">
    <div class="page-header">
        <h1>Edit Property</h1>
        <a href="/properties" class="btn btn-secondary">Back to Properties</a>
    </div>

    @if (isLoading)
    {
        <p>Loading property...</p>
    }
    else if (property == null)
    {
        <p class="error-message">Property not found.</p>
    }
    else
    {
        <div class="form-container">
            <EditForm Model="@property" OnValidSubmit="@HandleSubmit" FormName="EditPropertyForm">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label for="mls">MLS ID</label>
                    <InputText id="mls" class="form-control" @bind-Value="property.MlsId" disabled />
                </div>

                <div class="form-group">
                    <label for="titulo">Title</label>
                    <InputText id="titulo" @bind-Value="property.Titulo" class="form-control" />
                    <ValidationMessage For="@(() => property.Titulo)" />
                </div>

                <div class="form-group">
                    <label for="descripcion">Description</label>
                    <InputTextArea id="descripcion" @bind-Value="property.Descripcion" class="form-control" rows="4" />
                    <ValidationMessage For="@(() => property.Descripcion)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Property Type</label>
                    <select class="form-select" @bind="property.Tipo_Propiedad">
                        <option value="">Select type...</option>
                        <option>Beachfront</option>
                        <option>Hotels</option>
                        <option>Homes</option>
                        <option>Condos</option>
                        <option>Golf</option>
                        <option>Mountain</option>
                        <option>City Homes</option>
                        <option>Beach Homes</option>
                        <option>Apartments</option>
                        <option>Penthouses</option>
                        <option>Farms</option>
                        <option>Business</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="precio">Price</label>
                    <InputNumber id="precio" @bind-Value="property.Precio" class="form-control" />
                    <ValidationMessage For="@(() => property.Precio)" />
                </div>

                <div class="form-group">
                    <label for="areaConstruccion">Construction Area (m²)</label>
                    <InputNumber id="areaConstruccion" @bind-Value="property.AreaConstruccion" class="form-control" />
                    <ValidationMessage For="@(() => property.AreaConstruccion)" />
                </div>

                <div class="form-group">
                    <label for="areaTerreno">Land Area (m²)</label>
                    <InputNumber id="areaTerreno" @bind-Value="property.AreaTerreno" class="form-control" />
                    <ValidationMessage For="@(() => property.AreaTerreno)" />
                </div>

                <div class="form-group">
                    <label for="estadoPublicacion">Publication Status</label>
                    <InputSelect id="estadoPublicacion" @bind-Value="property.EstadoPublicacion" class="form-control">
                        <option value="">Select Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Pending">Pending</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => property.EstadoPublicacion)" />
                </div>

                <div class="form-group">
                    <label for="agenteId">Agent</label>
                    <InputSelect id="agenteId" @bind-Value="property.AgenteId" class="form-control">
                        <option value="">Select Agent</option>
                        @foreach (var agent in agents)
                        {
                            <option value="@agent.UsuarioId">@agent.Nombre</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label for="ubicacionId">Location</label>
                    <InputSelect id="ubicacionId" @bind-Value="property.UbicacionId" class="form-control">
                        <option value="">Select Location</option>
                        @foreach (var location in locations)
                        {
                            <option value="@location.UbicacionId">@location.Provincia</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Changes</span>
                        }
                    </button>

                    <a href="/properties" class="btn btn-secondary">Cancel</a>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">@errorMessage</div>
                }
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter] public int id { get; set; }

    private Propiedad? property;
    private List<Usuario> agents = new();
    private List<Ubicacion> locations = new();

    private bool isLoading = true;
    private bool isSaving = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            agents = Db.Usuarios.ToList();
            locations = Db.Ubicacions.ToList();

            property = await Db.Propiedads.FindAsync(id);

            if (property == null)
            {
                errorMessage = "Property not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading property.";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = string.Empty;

        try
        {
            Db.Propiedads.Update(property);
            await Db.SaveChangesAsync();
            Navigation.NavigateTo("/properties");
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while saving the property.";
            Console.WriteLine(ex);
        }
        finally
        {
            isSaving = false;
        }
    }
}

