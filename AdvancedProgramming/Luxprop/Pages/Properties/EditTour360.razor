@page "/properties/{propertyId:int}/tour360/edit"
@using Luxprop.Data.Models

@inject LuxpropContext Db
@inject NavigationManager Navigation

<h2>Edit 360° Tour</h2>

@if (property == null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="property" OnValidSubmit="Save">
        <div class="form-group">
            <label>360° Tour URL (iframe URL)</label>
            <InputText @bind-Value="property.Recorrido360Url" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </EditForm>
}

@code {
    [Parameter]
    public int propertyId { get; set; }

    private Propiedad? property;

    protected override async Task OnInitializedAsync()
    {
        property = await Db.Propiedads.FindAsync(propertyId);
    }

    private async Task Save()
    {
        await Db.SaveChangesAsync();
        Navigation.NavigateTo($"/properties/details/{propertyId}");
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/properties/details/{propertyId}");
    }
}
