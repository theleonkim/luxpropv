@page "/dashboardcomp"
@using Luxprop.Data
@using Luxprop.Data.Models
@inject LuxpropContext Db
@inject Luxprop.Services.SessionService Session
@inject NavigationManager Nav

<PageTitle>Buyer Dashboard</PageTitle>

@if (!loaded)
{
    <div class="container py-5 text-center text-muted">
        <div class="spinner-border mb-3"></div>
        <p>Loading your personalized dashboard…</p>
    </div>
}
else if (!authorized)
{
    <div class="container py-5 text-center text-danger">
        <h2 class="h4">Unauthorized</h2>
        <p>You don't have access to this section.</p>
    </div>
}
else
{
    <div class="dashboard-page container py-4">

        <!-- HERO HEADER -->
        <div class="rounded-4 p-4 mb-4 text-white"
             style="background: radial-gradient(circle at top left,#0f4e56,#159d7f); box-shadow:0 18px 35px rgba(0,0,0,.22);">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div>
                    <h1 class="h3 mb-2">Welcome back!</h1>
                    <p class="mb-0 text-opacity-75">
                        Explore properties tailored to you and keep track of recently added listings.
                    </p>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-light btn-sm px-3"
                            @onclick="@(() => Nav.NavigateTo("/properties"))">
                        <i class="bi bi-search me-1"></i> Explore Properties
                    </button>
                   
                </div>
            </div>
        </div>

        <!-- GRID -->
        <div class="row g-4">

            <!-- Quick Actions -->
            <div class="col-lg-4">
                <div class="dashboard-card h-100">
                    <div class="card-header">
                        <h3 class="h5 mb-0">Quick actions</h3>
                    </div>
                    <div class="card-content d-grid gap-2">
                        <a href="/properties" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i> Search properties
                        </a>
                        
                        <a href="/chat" class="btn btn-outline-info w-100">
                            <i class="bi bi-chat-left-text me-1"></i> Contact agent
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent listings -->
            <div class="col-lg-8">
                <div class="dashboard-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="h5 mb-0">Recently added properties</h3>
                        <span class="badge rounded-pill bg-light text-muted">
                            @recentProperties.Count results
                        </span>
                    </div>

                    <div class="card-content">
                        @if (recentProperties.Any())
                        {
                            <ul class="activity-list list-unstyled mb-0">
                                @foreach (var p in recentProperties.Take(10))
                                {
                                    <li class="activity-item py-2 border-bottom small">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="activity-title fw-semibold">@p.Titulo</div>
                                                <div class="activity-meta text-muted">
                                                    ID: @p.PropiedadId
                                                </div>
                                            </div>
                                            <span class="badge @GetPropertyStatusBadge(p.EstadoPublicacion)">
                                                @p.EstadoPublicacion
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="no-activity text-muted">No properties available yet.</div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
}

@code {
    private bool loaded, authorized, firstPass;
    private List<Propiedad> recentProperties = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || firstPass) return;
        firstPass = true;

        await Session.LoadUserAsync();

        var role = NormalizeRole(await Session.GetUserRoleAsync());

        authorized = role == "buyer";

        if (!authorized)
        {
            Nav.NavigateTo(role switch
            {
                "admin" => "/dashboard",
                "agent" => "/dashboardagent",
                "seller" => "/dashboardvend",
                _ => "/login"
            }, true);
            return;
        }

        var userId = await Session.GetUserIdAsync();

        // 🔹 Obtener expedientes donde el buyer está asignado
        var buyerExpedientes = Db.Expedientes
            .Where(e => e.ClienteId == userId && e.PropiedadId != null)
            .ToList();

        // 🔹 Extraer IDs de propiedades asignadas al buyer
        var buyerPropIds = buyerExpedientes
            .Select(e => e.PropiedadId!.Value)
            .Distinct()
            .ToList();

        // 🔹 Si no tiene propiedades asignadas → lista vacía
        if (!buyerPropIds.Any())
        {
            recentProperties = new List<Propiedad>();
        }
        else
        {
            recentProperties = Db.Propiedads
                .Where(p => buyerPropIds.Contains(p.PropiedadId))
                .OrderByDescending(p => p.PropiedadId)
                .ToList();
        }


        loaded = true;
        StateHasChanged();
    }

    private static string NormalizeRole(string? role)
    {
        var r = role?.Trim().ToLowerInvariant();
        return r switch
        {
            "administrador" or "admin" => "admin",
            "agente" or "agent" => "agent",
            "vendedor" or "seller" => "seller",
            "comprador" or "buyer" => "buyer",
            _ => ""
        };
    }

    private static string GetPropertyStatusBadge(string? status) =>
        status?.ToLowerInvariant() switch
        {
            "active" or "activo" => "bg-success text-white",
            "pending" or "pendiente" => "bg-warning text-dark",
            _ => "bg-secondary text-white"
        };
}

