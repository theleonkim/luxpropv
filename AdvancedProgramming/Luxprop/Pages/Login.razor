@page "/login"
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using Luxprop.Data
@using Luxprop.Data.Models
@using Luxprop.Models
@using Luxprop.Services
@inject LuxpropContext Db
@inject PasswordHelper PasswordHelper
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject SessionService SessionService

<PageTitle>Login - Luxprop</PageTitle>

<div class="login-page">

    <main>
        <section class="login-container">

            <!-- HEADER DEL LOGIN -->
            <div class="login-header">
                <img src="https://i.imgur.com/nmN7x14.png" alt="2CRRE Logo" class="logo" />
                <span class="title">2CRRE Docs</span>
            </div>

            <h2>Login</h2>

            <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <!-- EMAIL -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText id="email"
                               @bind-Value="loginModel.Email"
                               class="form-control"
                               placeholder="Enter your email" />
                    <ValidationMessage For="@(() => loginModel.Email)" />
                </div>

                <!-- PASSWORD -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText id="password"
                               type="password"
                               @bind-Value="loginModel.Password"
                               class="form-control"
                               placeholder="Enter your password" />
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>

                <!-- FORGOT PASSWORD -->
                <div class="forgot-container">
                    <a href="/forgot-password" class="forgot-link">Forgot your password?</a>
                </div>


                <!-- BOTÓN LOGIN -->
                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                    Login
                </button>

                <!-- MENSAJE ERROR -->
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <p class="error-message">@errorMessage</p>
                }

            </EditForm>
        </section>
    </main>
</div>

@code {
    private LoginVM loginModel = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            if (string.IsNullOrWhiteSpace(loginModel.Email) || string.IsNullOrWhiteSpace(loginModel.Password))
            {
                errorMessage = "Please enter your email and password.";
                return;
            }

            var hashed = PasswordHelper.HashPassword(loginModel.Password);

            var user = await Db.Usuarios
                .Include(u => u.UsuarioRols)
                    .ThenInclude(ur => ur.Rol)
                .FirstOrDefaultAsync(u => u.Email == loginModel.Email && u.Password == hashed);

            if (user is null)
            {
                errorMessage = "Invalid credentials. Please try again.";
                return;
            }

            var roleNameRaw = user.UsuarioRols
                .Select(ur => ur.Rol?.Nombre)
                .FirstOrDefault() ?? string.Empty;

            var role = NormalizeRole(roleNameRaw);

            await SessionService.SetUserAsync(user.UsuarioId, user.Nombre, roleNameRaw, user.Email);

            switch (role)
            {
                case "admin": Navigation.NavigateTo("/dashboard", true); break;
                case "agent": Navigation.NavigateTo("/dashboardagent", true); break;
                case "seller": Navigation.NavigateTo("/dashboardvend", true); break;
                case "buyer": Navigation.NavigateTo("/dashboardcomp", true); break;
                default: Navigation.NavigateTo("/dashboard", true); break;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Login error: {ex.Message}");
            errorMessage = "An error occurred during login.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string NormalizeRole(string? name)
    {
        var n = name?.Trim().ToLowerInvariant();
        return n switch
        {
            "administrador" or "admin" => "admin",
            "agente" or "agent" => "agent",
            "vendedor" or "seller" => "seller",
            "comprador" or "buyer" or "cliente" => "buyer",
            _ => string.Empty
        };
    }

    private void NavigateToCreateUser()
    {
        Navigation.NavigateTo("/user/create", true);
    }
}

