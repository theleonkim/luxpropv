        border-radius: 4px;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #0d505a;
        box-shadow: 0 0 0 2px rgba(13, 80, 90, 0.2);
    }

    .form-actions {
