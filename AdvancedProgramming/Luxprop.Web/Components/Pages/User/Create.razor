@page "/user/create"
@using Luxprop.Data
@using Luxprop.Data.Models
@using Luxprop.Web.Models
@using Luxprop.Web.Services
@inject LuxpropContext Db
@inject PasswordHelper PasswordHelper
@inject AuditoriaService AuditoriaService
@inject NavigationManager Navigation

<PageTitle>Create User - Luxprop</PageTitle>

<div class="create-user-page">
    <div class="page-header">
        <h1>Create New User</h1>
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>

    <div class="form-container">
        <EditForm Model="@userModel" OnValidSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            
            <div class="form-row">
                <div class="form-group">
                    <label for="nombre">First Name</label>
                    <InputText id="nombre" @bind-Value="userModel.Nombre" class="form-control" />
                    <ValidationMessage For="@(() => userModel.Nombre)" />
                </div>

                <div class="form-group">
                    <label for="apellido">Last Name</label>
                    <InputText id="apellido" @bind-Value="userModel.Apellido" class="form-control" />
                    <ValidationMessage For="@(() => userModel.Apellido)" />
                </div>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <InputText id="email" @bind-Value="userModel.Email" class="form-control" />
                <ValidationMessage For="@(() => userModel.Email)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="userModel.Password" class="form-control" />
                <ValidationMessage For="@(() => userModel.Password)" />
            </div>

            <div class="form-group">
                <label for="telefono">Phone</label>
                <InputText id="telefono" @bind-Value="userModel.Telefono" class="form-control" />
                <ValidationMessage For="@(() => userModel.Telefono)" />
            </div>

            <div class="form-group">
                <label for="rolId">Role</label>
                <InputSelect id="rolId" @bind-Value="userModel.RolId" class="form-control">
                    <option value="">Select Role</option>
                    @foreach (var role in roles)
                    {
                        <option value="@role.RolId">@role.Nombre</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => userModel.RolId)" />
            </div>

            <div class="form-group">
                <div class="form-check">
                    <InputCheckbox id="activo" @bind-Value="userModel.Activo" class="form-check-input" />
                    <label for="activo" class="form-check-label">Active</label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Creating User...</span>
                    }
                    else
                    {
                        <span>Create User</span>
                    }
                </button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">@errorMessage</div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="success-message">@successMessage</div>
            }
        </EditForm>
    </div>
</div>

@code {
    private CreateUserVM userModel = new();
    private List<Rol> roles = new();
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        try
        {
            roles = Db.Rols.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading roles.";
            Console.WriteLine($"Error loading roles: {ex.Message}");
        }
    }

    private async Task HandleSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var usuario = new Usuario
            {
                Nombre = userModel.Nombre,
                Apellido = userModel.Apellido,
                Email = userModel.Email,
                Password = PasswordHelper.HashPassword(userModel.Password),
                Telefono = userModel.Telefono,
                Activo = userModel.Activo
            };

            Db.Usuarios.Add(usuario);
            await Db.SaveChangesAsync();

            var ur = new UsuarioRol
            {
                UsuarioId = usuario.UsuarioId,
                RolId = userModel.RolId
            };

            Db.UsuarioRols.Add(ur);
            await Db.SaveChangesAsync();

            var rol = Db.Rols.Find(userModel.RolId);
            AuditoriaService.RegistrarAuditoria(
                usuario.UsuarioId,
                "Crear",
                "Usuario",
                $"Usuario creado {usuario.Nombre} {usuario.Apellido} con el rol {rol?.Nombre}"
            );

            successMessage = "Usuario creado y rol asignado.";
            
            // Reset form after successful creation
            userModel = new CreateUserVM();
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while creating the user.";
            Console.WriteLine($"Error creating user: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}

