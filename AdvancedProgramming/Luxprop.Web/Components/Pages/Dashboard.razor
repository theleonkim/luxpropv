    }

    .card-header {
        background-color: #0d505a;
        color: white;
        padding: 1rem;
    }

    .card-header h3 {
        margin: 0;
        font-size: 1.25rem;
    }

    .card-content {
        padding: 1.5rem;
    }

    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
    }

    .stat-item:last-child {
        border-bottom: none;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        color: #0d505a;
    }

    .stat-label {
        color: #666;
        font-size: 0.9rem;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn {
        padding: 0.75rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        border: 1px solid transparent;
        cursor: pointer;
        font-size: 0.9rem;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background-color: #0d505a;
        color: white;
