@page "/"

<PageTitle>Home - Luxprop Technology</PageTitle>

<div class="home-page">
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome to Luxprop Technology</h1>
            <p class="lead">Your comprehensive real estate management platform</p>
            <div class="hero-actions">
                <a href="/login" class="btn btn-primary btn-lg">Get Started</a>
                <a href="/properties" class="btn btn-outline-primary btn-lg">View Properties</a>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <h2>Platform Features</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <h3>Property Management</h3>
                    <p>Comprehensive property listing and management system with detailed information and status tracking.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
